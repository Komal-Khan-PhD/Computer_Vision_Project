   "source": [
    "# import library\n",
    "import cv2  as cv\n",
    "\n",
    "# To read the image \n",
    "img= cv.imread(\"resources/image.jpg\")\n",
    "\n",
    "# To show the image in window\n",
    "cv.imshow(\"Pehli image\",img)\n",
    "\n",
    "# To wait 0 represents forever\n",
    "cv.waitKey(0)"
   ]
